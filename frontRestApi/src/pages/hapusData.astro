<html>
  <body>
    <script>
      const id = new URLSearchParams(window.location.search).get("id");
      if (id) {
        fetch(`http://localhost:2025/barangs/${id}`, { method: "DELETE" })
          .then((res) => {
            if (res.ok) {
              alert("✅ Barang dihapus");
              window.location.href = "/";
            } else {
              alert("❌ Gagal menghapus");
            }
          });
      } else {
        alert("ID tidak ada");
      }
    </script>
  </body>
</html>
