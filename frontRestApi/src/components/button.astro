---
const {nama,warna,href} = Astro.props

const colorMap = {
    indigo: "bg-indigo-600 hover:bg-indigo-700",
    red: "bg-red-600 hover:bg-red-700",
    green: "bg-green-600 hover:bg-green-700",
    orange: "bg-orange-600 hover:bg-orange-700"
}

const colorClass = colorMap[warna]
---

<div class="flex">
    <a href={href} class=`mt-4 w-full ${colorClass} rounded-lg px-6 py-3 text-sm font-medium`>
    {nama}
    </a>
  </div>
